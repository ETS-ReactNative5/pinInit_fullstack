<!DOCTYPE html>
<html>
  <head>
    <title>PinInit</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <% if current_user %>

      <script>
        window.currentUser= {
          "id": <%= current_user.id %>,
          "email": "<%= current_user.email %>",
          "bio": "<%= current_user.bio  %>",
          "age": <%= current_user.age  %>,
          "f_name": "<%= current_user.f_name  %>",
          "l_name": "<%= current_user.l_name  %>",
          "username": "<%= current_user.username  %>",

          "photoUrl": "<%= current_user.profile_pic.attached? ? url_for(current_user.profile_pic) : false %>"

        };

      </script>


    <% end %>

      <script type="text/javascript">
        window.logoURL = "<%= image_url('logo.png') %>";
        window.bellURL = "<%= image_url('bell-solid.png')%>"
        window.messageIconURL = "<%= image_url('message-icon.png')%>"
        window.penURL = "<%= image_url('pen-solid.png')%>"
        window.lockURL = "<%= image_url('lock.png')%>"
        window.plusURL = "<%= image_url('plus-solid.png')%>"
        window.settingsIconURL = "<%= image_url('settings-icon.png')%>"
        window.shareLogoURL = "<%= image_url('share-logo.png')%>"
        window.theXURL = "<%= image_url('the-X.png')%>"
        window.dropdownIcon = "<%= image_url('chevron-down-solid.png')%>"
        window.avatar = "<%= image_url('default_inst.jpg')%>"
        window.moreURL = "<%= image_url('more.png')%>"
        window.downArrowURL = "<%= image_url('down-arrow.png')%>"
        window.upArrowURL = "<%= image_url('up-arrow.png')%>"
        window.deleteURL = "<%= image_url('delete.png')%>"
        window.editPenURL = "<%= image_url('pen-solid.png')%>"
        window.smallLockURL = "<%= image_url('smallLock.png')%>"
        window.dotsBlackURL = "<%= image_url('dotsBlack.png')%>"
        window.theXURL = "<%= image_url('theX.png')%>"
        window.magnaURL = "<%= image_url('magnifying-glass.png')%>"
        window.upRightArrowURL = "<%= image_url('upRightArrow.png')%>"
        window.plusSignURL = "<%= image_url('plusSign.png')%>"
        window.grayHeartURL = "<%= image_url('grayHeart.png')%>"
        window.redHeartURL = "<%= image_url('redHeart.png')%>"
        window.picLogoURL = "<%= image_url('picLogo.png') %>"
      </script>

      <script type="text/javascript">
        window.editingBoard = "0";
        window.editPin = "0";
      </script>

    <%= yield %>
  </body>
</html>
